<div class="new_user_background"> </div>

<div class="row">
  <div class="center-align-class" >
    <font color="white"  style="text-shadow: 5px 5px 5px black; font-size: 450%">Movie Genie</font>
    <br>     
    <br>
  </div>
<div>

<div class="row jumbotron col-xs-4 col-xs-offset-4" style="padding:2%; background: transparent; border-width: 3px; border-style: solid; border-color: white;">
  <form class="form-horizontal">
    <fieldset>
  
    <div class="form-group">
      <label for="full_name" class="col-xs-2 control-label"> Name</label>
      <div class="col-xs-8 col-xs-offset-1">
        <input type="text" id="full_name" class="form-control" name="user[name]" required>
      </div>
    </div>

      <div class="form-group">
        <label for="email" class="col-xs-2 control-label">Email</label>
        <div class="col-xs-8 col-xs-offset-1">
          <input type="email" id="email" class="form-control" name="user[email]" required>
        </div>
      </div>


      <div class="form-group">
        <label for="pswd" class="col-xs-2 control-label">Password</label>
        <div class="col-xs-8 col-xs-offset-1">
            <input type="password" class="form-control" id="pswd" name="user[password]" pattern=".{5,}" required title="5 characters minimum">
        </div>
      </div>

      <div class="form-group">
        <label for="pswd" class="col-xs-2 control-label">Confirm Password</label>
        <div class="col-xs-8 col-xs-offset-1">
            <input type="password" class="form-control" id="pswd" name="user[confirm_password]" pattern=".{5,}" required>
        </div>
      </div>      

      <div class="form-group">
        <div class="col-xs-10 col-xs-offset-3">
          <button type="submit" class="btn btn-default btn-sm">Sign Up</button>        
        </div>
      </div>
    </fieldset>
  </form>
</div>

<div class="row">
  <div class="col-xs-4 col-xs-offset-4">
   <a href="<%= MovieGenie.url + 'auth/facebook' %>"> <button class="btn btn-lg btn-block fbLogin" style="background: #2F4F81"><font color="white">Sign Up With Facebook</font>  </button> </a> 
  </div>
</div>

